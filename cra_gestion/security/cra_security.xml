<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Categoría de Grupos -->
        <record id="module_category_cra" model="ir.module.category">
            <field name="name">CRA Gestión</field>
            <field name="description">Gestión de Central Receptora de Alarmas</field>
            <field name="sequence">20</field>
        </record>

        <!-- Grupo: Receptora -->
        <record id="group_cra_receptora" model="res.groups">
            <field name="name">Receptora</field>
            <field name="category_id" ref="module_category_cra"/>
            <field name="comment">Permisos para personal de recepción: crear y editar incidencias, ver partes y protocolos</field>
        </record>

        <!-- Grupo: Técnico -->
        <record id="group_cra_tecnico" model="res.groups">
            <field name="name">Técnico</field>
            <field name="category_id" ref="module_category_cra"/>
            <field name="implied_ids" eval="[(4, ref('group_cra_receptora'))]"/>
            <field name="comment">Permisos para técnicos: gestionar partes de trabajo y ver sus incidencias asignadas</field>
        </record>

        <!-- Grupo: Administrador CRA -->
        <record id="group_cra_admin" model="res.groups">
            <field name="name">Administrador CRA</field>
            <field name="category_id" ref="module_category_cra"/>
            <field name="implied_ids" eval="[(4, ref('group_cra_tecnico'))]"/>
            <field name="comment">Acceso completo a todas las funcionalidades del módulo CRA</field>
        </record>

    </data>
</odoo>
